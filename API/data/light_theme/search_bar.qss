QLineEdit {
    background-color : rgb(170, 170, 170) ;
    border : 1px solid rgb(220, 220, 220) ;
    border-radius : 2px ;
    font-size : 14px ;
    font-weight : 500 ;
    color: rgb(7, 7, 7);
    padding-right : 10px ;
}

QLineEdit:hover {
    background-color : rgb(180, 180, 180) ;
    border : 1px solid white ;
    border-radius : 2px ;
    font-size : 14px ;
    font-weight : 500 ;
    color: rgb(5, 5, 5);
    padding-right : 10px ;
}