QPushButton{
    background-color : rgb(45, 45, 45) ;
    font-size : 14px ;
    border : 1px solid rgb(55, 55, 55) ;
    border-radius : 2px ;
    color : rgb(230, 230, 230) ;
    font-weight : 500 ;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif  ;
}

QPushButton:checked {
    color: black;
    background-color : white;
}

QPushButton:hover{
    background-color : rgb(230, 230, 230) ;
    font-size : 14px ;
    font-weight : 580 ;
    color : rgb(2, 2, 2);
}